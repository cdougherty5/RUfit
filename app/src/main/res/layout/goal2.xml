<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/secondGoal"
    android:layout_width="fill_parent"
    android:layout_height="150dp"
    android:padding="6dp" >

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:contentDescription="TODO"
        android:src="@drawable/medal" />

    <TextView
        android:id="@+id/secondLine2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:ellipsize="marquee"
        android:text="Description"
        android:textSize="12sp"
        android:layout_below="@+id/firstLine2"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/icon2"
        android:layout_toEndOf="@+id/icon2" />

    <TextView
        android:id="@+id/firstLine2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/icon2"
        android:layout_toRightOf="@+id/icon2" />

    <ProgressBar
        android:id="@+id/goalBar2"
        style="@style/CustomProgressBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/percent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/DarkRed"
        android:text="0%"
        android:layout_alignBottom="@+id/secondLine2"
        android:layout_alignRight="@+id/goalBar2"
        android:layout_alignEnd="@+id/goalBar2" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/editGoal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_edit"
        android:clickable="true"
        app:elevation="3dp"
        app:fabSize="mini"
        app:pressedTranslationZ="6dp"
        app:backgroundTint="@color/DarkRed"
        android:layout_above="@+id/secondLine2"
        android:layout_alignLeft="@+id/percent2"
        android:layout_alignStart="@+id/percent2" />

</RelativeLayout>